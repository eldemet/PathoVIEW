{
    "compilerOptions": {
        "experimentalDecorators": true,
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "module": "es2022",
        "moduleResolution": "Node",
        "target": "es6",
        "rootDir": "./",
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "include": [
        "types/*",
        "server/**/*",
        "server/node_modules/utilities-node/src/**/*",
        "client/types/*",
        "client/src/**/*",
        "client/node_modules/library-aurelia/types/*",
        "client/node_modules/library-aurelia/src/**/*"
    ],
    "exclude": [
        "test",
        "docs",
        "dist",
        "server/client"
    ]
}
