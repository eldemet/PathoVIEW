{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "module": "es2022",
        "moduleResolution": "Node",
        "target": "es6",
        "rootDir": "./",
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "include": [
        "**/*",
        "node_modules/utilities-node/src/**/*"
    ],
    "exclude": [
        "node_modules",
        "test",
        "docs",
        "dist",
        "client"
    ]
}
