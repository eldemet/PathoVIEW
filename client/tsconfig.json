{
    "compilerOptions": {
        "experimentalDecorators": true,
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "module": "es2022",
        "moduleResolution": "Node",
        "target": "es2022",
        "rootDir": "./",
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "include": [
        "node_modules/library-aurelia/types/*",
        "node_modules/library-aurelia/src/**/*",
        "types/*",
        "src/**/*"
    ],
    "exclude": [
        "test",
        "docs",
        "dist"
    ]
}
