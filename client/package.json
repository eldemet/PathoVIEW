{
    "name": "pathoview-client",
    "description": "PathoVIEW client application.",
    "version": "0.1.0",
    "repository": {
        "type": "git",
        "url": "https://gitlab.cc-asp.fraunhofer.de/pathocert/pathoview.git"
    },
    "license": "BSD-3-Clause-Clear",
    "dependencies": {
        "@geoman-io/leaflet-geoman-free": "^2.11.2",
        "keycloak-js": "^15.0.2",
        "leaflet": "^1.7.1",
        "library-aurelia": "git+https://gitlab.cc-asp.fraunhofer.de/knecht/library-aurelia.git#v3.10.0"
    },
    "devDependencies": {
        "css-minimizer-webpack-plugin": "^3.1.1"
    },
    "browserslist": [
        "defaults",
        "not IE 11"
    ],
    "scripts": {
        "build": "au build --env prod",
        "start": "au run",
        "test": "au test",
        "cypress": "au cypress",
        "prepare": "gulp license-checker"
    },
    "engines": {
        "node": ">=8.9.0"
    },
    "jest": {
        "moduleNameMapper": {
            "^aurelia-binding$": "<rootDir>/node_modules/aurelia-binding"
        },
        "modulePaths": [
            "<rootDir>/src",
            "<rootDir>/node_modules"
        ],
        "moduleFileExtensions": [
            "js",
            "json"
        ],
        "transform": {
            "^.+\\.(css|less|sass|scss|styl|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "jest-transform-stub",
            "^.+\\.js$": "babel-jest"
        },
        "testRegex": "\\.spec\\.js$",
        "setupFiles": [
            "<rootDir>/test/jest-pretest.js"
        ],
        "testEnvironment": "node",
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/**/*.js",
            "!**/*.spec.js",
            "!**/node_modules/**",
            "!**/test/**"
        ],
        "coverageDirectory": "<rootDir>/test/coverage-jest",
        "coverageReporters": [
            "json",
            "lcov",
            "text",
            "html"
        ]
    }
}
